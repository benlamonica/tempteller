<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %X{user_id}%X{push_token}%X{endpoint} %msg%n</pattern>
    </encoder>
  </appender>

  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>
  
  <logger name="us.pojo" level="DEBUG" additivity="false">
    <appender-ref ref="STDOUT" />
  </logger>
  
</configuration>